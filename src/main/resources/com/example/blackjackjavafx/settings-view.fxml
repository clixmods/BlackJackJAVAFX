<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.blackjackjavafx.Application.controller.ControleurSettings">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Paramètres"/>
            <Label text="Volume de la musique"/>
            <Slider fx:id="sliderMusique" maxWidth="500" min="0.0" max="1.0" value="0.5" showTickLabels="true" showTickMarks="true" majorTickUnit="0.1" minorTickCount="0"/>
            <Label text="Volume des effets sonores"/>
            <Slider fx:id="sliderEffets" maxWidth="500" min="0.0" max="1.0" value="0.5" showTickLabels="true" showTickMarks="true" majorTickUnit="0.1" minorTickCount="0"/>
            <Label text="Langue"/>
            <ComboBox fx:id="langueBox" value="Français">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Français"/>
                        <String fx:value="Anglais"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Button text="Appliquer" onAction="#handleAppliquer"/>
        </VBox>
    </center>
</BorderPane>