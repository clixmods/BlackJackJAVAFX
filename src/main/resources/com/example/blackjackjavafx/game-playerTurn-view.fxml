<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.SubScene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>



<!-- Attention utilisez bien xmlns:fx="http://javafx.com/fxml" pour eviter de spécifiez la version afin de pas avoir de message de warning au démarrage du jeu -->
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.blackjackjavafx.Application.controller.ControleurJeu" fx:id="vueGlobale">
   <BorderPane>
   <center>
      <VBox alignment="CENTER" prefHeight="464.0" prefWidth="700.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <HBox fx:id="cardBoxDealer" alignment="CENTER" spacing="10.0"/>
         <Label fx:id="handDealerText" text="Main du croupier" textFill="WHITE" visible="false"/>
         <Label fx:id="messageRoundText" scaleX="1.5" scaleY="1.5" scaleZ="1.5" text="Sélectionnez votre mise"
                textFill="WHITE"/>
         <Button fx:id="buttonRestartRound" onAction="#onRestartButtonClick" text="Restart" visible="false"/>
         <Label fx:id="miseRoundText" textFill="WHITE"/>
         <Label fx:id="handPlayerText" textFill="WHITE"/>
         <HBox fx:id="cardBoxPlayer" alignment="CENTER" spacing="10.0"/>
         <SubScene fx:id="subSceneMise" fill="WHITE" height="11.0" opacity="0.0" width="654.0">
            <root>
               <Region/>
            </root>
            <effect>
               <ColorAdjust brightness="-0.48"/>
            </effect>
         </SubScene>
      </VBox>
   </center>
   <bottom>
      <HBox fx:id="buttonBoxPlayer" alignment="CENTER" prefHeight="65.0" prefWidth="325.0" spacing="60.0" BorderPane.alignment="CENTER" visible="false">
         <Button fx:id="buttonStand" onAction="#onStandButtonClick" scaleX="2.0" scaleY="2.0" scaleZ="2.0" text="Rester"/>
         <Button fx:id="buttonHit" onAction="#onHitButtonClick" scaleX="2.0" scaleY="2.0" scaleZ="2.0" text="Piocher"/>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="50.0" top="50.0" />
   </padding>
   </BorderPane>
</VBox>
