<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="464.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blackjackjavafx.RoundController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox fx:id="cardBoxDealer" />
      <Label fx:id="deckSizeText" />
      <Label fx:id="handDealerText" />
      <Label fx:id="messageRoundText" />
      <Button fx:id="buttonRestartRound" onAction="#onRestartButtonClick" text="Restart" />
      <Label fx:id="handPlayerText" />
      <HBox prefHeight="100.0" prefWidth="534.0" spacing="20.0">
         <children>
            <Button fx:id="buttonStand" onAction="#onStandButtonClick" text="Stand" />
            <Button fx:id="buttonHit" onAction="#onHitButtonClick" text="Hit" />
         </children>
         <padding>
            <Insets left="273.0" top="40.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox fx:id="cardBoxPlayer" />
   </children>
</VBox>
